  <section class="sect">

    <div class="m-5 text-center">
      <h1>Enter the OTP for your forgot Password</h1>
    </div>


    <div class="container">
      <div class="card">

        <div class="card-text text-center">
          <h5 class="mt-3 text-danger">Please enter the six digit OTP sent at your given email address within 5 minutes.
          </h5>
        </div>


        <form action="/frogotPasswordOTPVerification?six_digit_otp=<%= six_digit_otp %>&email=<%= email %>"
          method="POST">

          <div class="form-group">
            <input type="number" class="form-control mt-5" name="sixDigitforgotPasswordOTP" id="exampleInputOTP"
              placeholder="Enter OTP">
          </div>

          <div class="contactbutton m-5">
            <button type="submit" class="btn btn-primary">Submit OTP</button>
          </div>

        </form>

      </div>
    </div>

